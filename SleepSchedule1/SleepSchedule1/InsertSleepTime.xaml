<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SleepSchedule1.InsertSleepTime">
    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="Pink">
            <!-- Title -->
            <Label Text="Бебешки график" FontSize="50"
               HorizontalOptions="Center"  />

            <Image Source="baby_new_logo.png"   VerticalOptions="Center" HeightRequest="200" />
            <Label Text="Начало на сън"/>
            <DatePicker x:Name="startDate"/>
            <TimePicker  x:Name="startTime"/>
            <Label Text="Край на сън"/>
            <DatePicker x:Name="stopDate"/>
            <TimePicker  x:Name="stoptTime"/>
            <Button Text="Запази" Clicked="Button_Clicked_Save"/>
            <Label x:Name="sleepTimer" FontSize="24"/>
            
            <Label x:Name="result" FontSize="24"/>
            


        </StackLayout>
    </ContentPage.Content>
</ContentPage>